extends layout

block content
  h1= title
  p Welcome to my first #{title} server
  button(type="button", class="btn btn-secondary", onclick="update()") Press Me
  br
  br
  div(id="target") Display
  
  script.
    var client_count = 0
    function update(){
      client_count += 1;
      document.getElementById("target").innerHTML = `Value now ${client_count}`;
    }

  a(href = '/handbag') Bag Page link